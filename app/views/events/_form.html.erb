<div class="container-fluid">
  <div class="span12 centered-text">
<%= simple_form_for @event, remote: true do |f| %>
    <% if @event.errors.any? %>
        <% @event.errors.full_messages.each do |message| %>

            <div class="alert alert-alert">
              <li><%= message %></li>
            </div>
        <% end %>

    <% end %>

    <% if f.error_notification.present? %>
        <div class="alert alert-alert">
          <%= f.error_notification %>
        </div>
    <% end %>

    <div class="form-group row">
      <div class="col-10">
        <%= f.label :place, for: "example-text-input", class: "col-2 col-form-label" %>
        <%= f.text_field :place, class: "form-control", name:"place" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-10">
        <%= f.label :start_time %>
        <%= f.datetime_select :time %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-10">
        <%= f.label :end_time %>
        <%= f.datetime_select :end_time %>
      </div>
    </div>


    <div class="form-group row">
      <div class="col-10">
        <%= f.label :description, for: "example-text-input", class: "col-2 col-form-label" %>
        <%= f.text_area :description, class: "form-control",name:"description" %>
      </div>
    </div>


    <div class="form-group row">
      <div class="col-10">
        <%= f.button :submit, "Create", class: "btn btn-primary btn-sm" %>
      </div>
    </div>
<% end %>
</div>
</div>